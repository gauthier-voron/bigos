#!/bin/sh
# Run sp on a native Linux with all machine resources.

error() {
    MSG=$1; shift
    echo "$0: $MSG" 1>&2
    exit 1
}

RESULTS=sp-interl.`date +'%Y-%m-%d-%H-%M-%S'`

mkdir "$RESULTS" || error "cannot mkdir '$RESULTS'"
mkdir "$RESULTS/log" || error "cannot mkdir '$RESULTS/logs'"
build-sp "$RESULTS/npb" || exit 1

cd "$RESULTS"
perf stat -a -o log/perf.log -e ra8e9,r98e9 numactl --interleave=all sp npb

mv `find npb/ -name "*.log"` log

mv log/* .
rm -rf npb
rmdir log

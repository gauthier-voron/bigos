#!/bin/sh
# Run swaptions on a native Linux with all machine resources.

error() {
    MSG=$1; shift
    echo "$0: $MSG" 1>&2
    exit 1
}

RESULTS=`date +'%Y-%m-%d-%H-%M-%S'`

mkdir "$RESULTS" || error "cannot mkdir '$RESULTS'"
mkdir "$RESULTS/log" || error "cannot mkdir '$RESULTS/logs'"
build-swaptions "$RESULTS/parsec" || exit 1

cd "$RESULTS"
cpurate log/cpu swaptions &
memrate log/mem swaptions &
numamem log/numa &
oproperf log/oprof CPU_IO_REQUESTS_TO_MEMORY_IO:500:0xa8 CPU_IO_REQUESTS_TO_MEMORY_IO:500:0x98 &
swaptions parsec
kill `cat log/cpu.pid`
kill `cat log/mem.pid`
kill `cat log/numa.pid`
kill `cat log/oprof.pid`
rm log/cpu.pid
rm log/mem.pid
rm log/numa.pid
rm log/oprof.pid
sleep 1
mv `find parsec/log/ -name "*.log"` log

mv log/* .
rm -rf parsec
rmdir log
